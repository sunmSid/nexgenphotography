@using Brownie.Models
<html>
<head>
    <script>
        function backPage() {
            window.history.forward();
        }
        function myfun() {
            document.getElementById("upfile").click();
        }
        function timf() {
            document.getElementById("ftes").value = document.getElementById("upfile").value;
        }

    </script>


    <title></title>
    <style>
        .newf {
            border: 2px dashed white;
            padding: 5%;
            height: 30px;
            width: 30px;
            opacity: 0.8;
            cursor: pointer;
            transition: 0.25s;
            margin-bottom: -0.9%;
            background-image: url("~/Content/add.png");
        }

            .newf:hover {
                opacity: 1;
            }
        #buttonRem {
            float: left;
            width: 40%;
            height: 30px;
            margin-left: 10%;
            margin-top: 10px;
            color: white;
            background: #636359;
            border-radius: 5px;
        }
        #upload {
            width: 10%;
            height: 30px;
            margin-left: 5%;
            margin-top: 10px;
            color: white;
            background: #636359;
            border-radius: 5px;
        }
    </style>
</head>

<body onload="backPage()">
